<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_3"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/TVSecondary"
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:background="@color/black_shade_3"
       android:gravity="bottom"
       android:maxLines="1"
       android:padding="10dp"
       android:paddingTop="30dp"
       android:textAlignment="viewEnd"
       android:textColor="@color/white"
       android:textSize="15sp"
       tools:ignore="RtlCompat" />

   <TextView
       android:id="@+id/TVPrimary"
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:layout_below="@id/TVSecondary"
       android:background="@color/black_shade_3"
       android:gravity="bottom"
       android:maxLines="1"
       android:padding="10dp"
       android:textAlignment="viewEnd"
       android:textColor="@color/white"
       android:textSize="50sp"
       tools:ignore="RtlCompat" />
   
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/TVPrimary"
       android:background="@color/black_shade_1"
       app:cardBackgroundColor="@color/black_shade_1"
       app:cardCornerRadius="4dp"
       android:elevation="2dp"
       >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:weightSum="7"
          android:background="@color/black_shade_1"
          >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:orientation="horizontal"
             android:weightSum="4">


            <Button
                android:id="@+id/btnAC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="AC"
                android:textColor="@color/yellow"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="C"
                android:textColor="@color/yellow"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnOpenBrac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="("
                android:textColor="@color/yellow"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnCloseBrac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text=")"
                android:textColor="@color/yellow"
                android:textSize="15sp" />

         </LinearLayout>



         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:weightSum="5"
             android:orientation="horizontal"
             >


            <Button
                android:id="@+id/btnFact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="x!"
                android:textColor="@color/yellow"
                android:textSize="15sp"
                />
            <Button
                android:id="@+id/btnSq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="x²"
                android:textColor="@color/yellow"
                android:textSize="15sp"
                />
            <Button
                android:id="@+id/btnSqR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="√"
                android:textColor="@color/yellow"
                android:textSize="15sp"
                />
            <Button
                android:id="@+id/btnRecip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="1/x"
                android:textColor="@color/yellow"
                android:textSize="10sp"
                />
            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="÷"
                android:textColor="@color/yellow"
                android:textSize="15sp"
                />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:orientation="horizontal"
             android:weightSum="4">


            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="×"
                android:textColor="@color/yellow"
                android:textSize="15sp" />

         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:orientation="horizontal"
             android:weightSum="4">


            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="-"
                android:textColor="@color/yellow"
                android:textSize="15sp" />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:orientation="horizontal"
             android:weightSum="4">


            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="+"
                android:textColor="@color/yellow"
                android:textSize="15sp" />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:orientation="horizontal"
             android:weightSum="4">


            <Button
                android:id="@+id/btnPie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="π"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnDeci"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black_shade_2"
                android:text="="
                android:textColor="@color/yellow"
                android:textSize="15sp" />

         </LinearLayout>

      </LinearLayout>
   </androidx.cardview.widget.CardView>

</RelativeLayout>